<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Click & collect{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/styles/style.css') }}" />
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <h1> Click & collect </h1>
        <a class="btn-a w-175px" href="{{ path('app_home') }}">Home</a>
        <div class="gap-40px disp-f mg-t-5vh al-c j-c-c f-d-c">
            <a class="btn-a w-175px" href="{{ path('app_produits') }}">Listes produits</a>
            <a class="btn-a w-175px" href="">Voir mon profil</a>
        </div>
        <h1 class="f-s-20px">Voir le panier</h1>
        {% for panier in result %}
        <p>Nom : {{ panier.n }}</p>
        <p>Quantite : {{ panier.quantite }}</p>
        <p>Prix au Kg : {{ panier.prix }} euros</p>
        {% endfor %}
        {% endblock %}
        {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.email) }}
        {{ form_row(form.telephone) }}
        {{ form_end(form) }}
        {% for flashMessage in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
            
        {% endfor %}
    </body>
</html>
